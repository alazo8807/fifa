<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <title>Fifa Battle</title>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="/app.css" type="text/css" />
  </head>
  <body>
    <head>
      
    </head> 

    <section id="new-tournament">
      <div class="container">
        <h1>Hello from new tournament</h1>
        
        <form action="/tournaments" method="POST">
            
            <div class="form-group row">
              <label for="nameInput" class="col-md-2 col-form-label">Name:</label>
              <div class="col-md-4">
                <input class="form-control" type="text" placeholder="Tournament Name" name="name" id="nameInput" required="true">
              </div>
            </div>
            
            <div class="form-group row">
              <label for="typeSelect" class="col-md-2 col-form-label">Type</label>
                <div class="col-md-4">
                  <select class="form-control" id="typeSelect">
                    <option value="L">League</option>
                    <option value="K">Knockout</option>
                  </select>  
                </div>
            </div>
            
            <div class="form-group row">
              <label for="nbrPlayersInput" class="col-md-2 col-form-label">Number of Players:</label>
              <div class="col-md-2">
                <input class="form-control" type="number" placeholder="2" name="nbr_of_players" id="nbrPlayersInput" min="2" placeholder="2">
              </div>
            </div>
            
            <div class="form-group row">
              <label for="nbrMatchesInput" class="col-md-2 col-form-label">Number of Matches:</label>
              <div class="col-md-2">
                <input class="form-control" type="number" placeholder="1" name="nbr_of_matches" id="nbrMatchesInput" min="1" placeholder="1">
              </div>
            </div>
            
            <hr>
            
            <!--Player and Teams-->
            <h4>Players - Teams</h4>
            
            <div class="player-teams-container container">
              <div class="player-teams-wrapper col-md-3">
                <div class="form-group player-form">
                  <input class="form-control" type="text" placeholder="Player" name="players[0][name]" required="true">
                </div>
                <div class="form-group team-form">
                  <input class="form-control" type="text" placeholder="Team" name="players[0][teams][0]" required="true">
                </div>
              </div>  
              
              <div class="player-teams-wrapper col-md-3">
                <div class="form-group player-form">
                  <input class="form-control" type="text" placeholder="Player" name="players[1][name]" required="true">
                </div>
                <div class="form-group team-form">
                  <input class="form-control" type="text" placeholder="Team" name="players[1][teams][0]" required="true">
                </div>
              </div>  
            </div>
            <button class="btn btn-primary">Create</button>
        </form>  
      </div>
    </section>
    
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/bcbea1a7f2.js"></script>
  </body>
</html>
